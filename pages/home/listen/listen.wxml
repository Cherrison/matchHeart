<view class="cu-custom" style="height:150rpx;">
  <view class="cu-bar fixed bg-gradual-pink" style="height:150rpx;padding-top:10px;">
    <view bindtap='back' class='btn'>返回</view>
    <text style='font-weight:bolder;margin-left:300rpx;margin-top:50rpx;'>小海心声</text>
  </view>
</view>

<view class="cu-bar bg-white solid-bottom margin-top">
  <view class='action'>
    <text class='icon-titles text-orange '></text> 来听一下我的心声吧
  </view>
  <view class='action'>
    <switch class='sm' checked='{{isCard}}' bindchange='isCard'></switch>
  </view>
</view>

<!--此处设置文章内容滑动，下拉至底部自动加载，加载由小程序自身完成-->
<scroll-view scroll-y='true' scroll-x='false' bindscrolltolower='tolower' style='height:100%;'>
  <view class="cu-card listen">
    <view wx:for="{{articleList}}" data-article-id='{{item.id}}' wx:for-index='id' class="cu-item shadow">
      <view class="title">{{item.title}}</view>
      <view class="content">
        <image style='border-radius:50%;' src="{{item.imgurl}}" mode="scaleToFill"></image>
        <image src="{{item.play}}" data-id='{{id}}' data-src="{{item.src}}" class='playbtn'catchtap='play'></image>
        <view class="desc">
          <view class='text-content'>{{item.description}}</view>
          <view>
            <view wx:for="{{item.tags}}" wx:for-item="itag" wx:key="itags" style='margin-top:10rpx;' class='cu-tag bg-{{itag.color}} light sm round'>{{itag.short}}</view>
            <view style='float:right;'class='text-brown cu-tag bg-olive light round'> 播放次数：{{item.star}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>